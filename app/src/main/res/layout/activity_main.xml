<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/historique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#BCBCBC"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calculActuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="130dp"
        android:maxHeight="130dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/historique" />

    <Button
        android:id="@+id/CE"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#BCBCBC"
        android:onClick="onClicSpecial"
        android:text="CE"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculActuel" />

    <Button
        android:id="@+id/C"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#BCBCBC"
        android:onClick="onClicSpecial"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/CE"
        app:layout_constraintTop_toBottomOf="@id/calculActuel" />

    <Button
        android:id="@+id/DEL"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#BCBCBC"
        android:onClick="onClicSpecial"
        android:text="D"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/C"
        app:layout_constraintTop_toBottomOf="@id/calculActuel" />

    <Button
        android:id="@+id/DIVISER"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF9800"
        android:onClick="onClicSpecial"
        android:text="/"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/DEL"
        app:layout_constraintTop_toBottomOf="@id/calculActuel" />

    <Button
        android:id="@+id/sept"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CE" />

    <Button
        android:id="@+id/huit"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="8"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/sept"
        app:layout_constraintTop_toBottomOf="@id/CE" />

    <Button
        android:id="@+id/neuf"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="9"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/huit"
        app:layout_constraintTop_toBottomOf="@id/CE" />

    <Button
        android:id="@+id/MULTIPLICATION"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF9800"
        android:onClick="onClicSpecial"
        android:text="*"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/neuf"
        app:layout_constraintTop_toBottomOf="@id/CE" />

    <Button
        android:id="@+id/quatre"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="4"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sept" />

    <Button
        android:id="@+id/cinq"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="5"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/sept"
        app:layout_constraintTop_toBottomOf="@id/sept" />

    <Button
        android:id="@+id/six"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="6"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/huit"
        app:layout_constraintTop_toBottomOf="@id/sept" />

    <Button
        android:id="@+id/ADDITION"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF9800"
        android:onClick="onClicSpecial"
        android:text="+"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/neuf"
        app:layout_constraintTop_toBottomOf="@id/sept" />

    <Button
        android:id="@+id/un"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quatre" />

    <Button
        android:id="@+id/deux"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="2"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/sept"
        app:layout_constraintTop_toBottomOf="@id/quatre" />

    <Button
        android:id="@+id/trois"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="3"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/huit"
        app:layout_constraintTop_toBottomOf="@id/quatre" />

    <Button
        android:id="@+id/SOUSTRACTION"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF9800"
        android:onClick="onClicSpecial"
        android:text="-"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/neuf"
        app:layout_constraintTop_toBottomOf="@id/quatre" />

    <Button
        android:id="@+id/zero"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicNombre"
        android:text="0"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/un" />

    <Button
        android:id="@+id/point"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#535353"
        android:onClick="onClicSpecial"
        android:text=","
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/huit"
        app:layout_constraintTop_toBottomOf="@id/un" />

    <Button
        android:id="@+id/EGAL"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:backgroundTint="#FF9800"
        android:onClick="onClicSpecial"
        android:text="="
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/neuf"
        app:layout_constraintTop_toBottomOf="@id/un" />

</androidx.constraintlayout.widget.ConstraintLayout>